block content
    main.page-content
      section.search-results
        - var results = [{title: 'Монстера', categories: ['Дом'], type: 'Куплю',photo: {src: '/img/item01.jpg', srcset: '/img/item01@2x.jpg 2x'},sum: 1000,description: 'Куплю монстеру зеленую в хорошем зеленом состоянии, буду поливать...'},{title: 'Мое старое кресло',categories: ['Дом'],type: 'Продам',photo: {src: '/img/item02.jpg', srcset: '/img/item02@2x.jpg 2x'},sum: 4000,description: 'Продам свое старое кресло, чтобы сидеть и читать книги зимними...'},{title: 'Дедушкины часы', categories: ['Электроника'],type: 'Продам',photo: {src: '/img/item03.jpg', srcset: '/img/item03@2x.jpg 2x'},sum: 45000,description: 'Продаю дедушкины часы в прекрасном состоянии, ходят до...'},{title: 'Кофеварка',categories: ['Дом'],type: 'Куплю',photo: {src: '/img/item04.jpg', srcset: '/img/item04@2x.jpg 2x'},sum: 2000,description: 'Куплю вот такую итальянскую кофеварку, можно любой фирмы...'},{title: 'Ленд Ровер',categories: ['Авто', 'Электроника'],type: 'Продам',photo: {src: '/img/item05.jpg', srcset: '/img/item05@2x.jpg 2x'},sum: 900000,description: 'Куплю монстеру зеленую в хорошем зеленом состоянии, буду поливать...'},{title: 'Кофеварка',categories: ['Электроника'],type: 'Продам',photo: {src: '/img/item04.jpg', srcset: '/img/item04@2x.jpg 2x'},sum: 88000,description: 'Куплю вот такую итальянскую кофеварку, можно любой фирмы...'}]
          h1.visually-hidden Результаты поиска
          .search-results__wrapper
            if (results.length)
              p.search-results__label
                | Найдено
                span.js-results #{results.length} публикации
              ul.search-results__list
                each ticket in results
                  include ../components/ticket
            else
              .search-results__message
                p
                  | Не найдено
                  br
                  | ни одной публикации
      section.tickets-list
        h2.visually-hidden Самые новые предложения
        .tickets-list__wrapper
          .tickets-list__header
            p.tickets-list__title Самое свежее
            a.tickets-list__link(href='#') Еще 25

          ul
            each ticket in results
              include ../components/ticket
