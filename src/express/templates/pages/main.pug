block content
  - var categories = [{ title: 'Дом', quantity: 81, icon: {src: '/img/cat.jpg', srcset: '/img/cat@2x.jpg 2x'}, active: false }, { title: 'Электроника', quantity: 62, icon: {src: '/img/cat02.jpg', srcset: '/img/cat02@2x.jpg 2x'}, active: false }, { title: 'Одежда', quantity: 106, icon: {src: '/img/cat03.jpg', srcset: '/img/cat03@2x.jpg 2x'}, active: false }, { title: 'Спорт/отдых', quantity: 86, icon: {src: '/img/cat04.jpg', srcset: '/img/cat04@2x.jpg 2x'}, active: false }, { title: 'Авто', quantity: 34, icon: {src: '/img/cat05.jpg', srcset: '/img/cat05@2x.jpg 2x'}, active: false }, { title: 'Книги', quantity: 92, icon: {src: '/img/cat06.jpg', srcset: '/img/cat06@2x.jpg 2x'}, active: false }]
  - var tickets = [{title: 'Монстера', categories: ['Дом'], type: 'Куплю',photo: {src: '/img/item01.jpg', srcset: '/img/item01@2x.jpg 2x'},sum: 1000,description: 'Куплю монстеру зеленую в хорошем зеленом состоянии, буду поливать...'},{title: 'Мое старое кресло',categories: ['Дом'],type: 'Продам',photo: {src: '/img/item02.jpg', srcset: '/img/item02@2x.jpg 2x'},sum: 4000,description: 'Продам свое старое кресло, чтобы сидеть и читать книги зимними...'},{title: 'Дедушкины часы', categories: ['Электроника'],type: 'Продам',photo: {src: '/img/item03.jpg', srcset: '/img/item03@2x.jpg 2x'},sum: 45000,description: 'Продаю дедушкины часы в прекрасном состоянии, ходят до...'},{title: 'Кофеварка',categories: ['Дом'],type: 'Куплю',photo: {src: '/img/item04.jpg', srcset: '/img/item04@2x.jpg 2x'},sum: 2000,description: 'Куплю вот такую итальянскую кофеварку, можно любой фирмы...'},{title: 'Ленд Ровер',categories: ['Авто', 'Электроника'],type: 'Продам',photo: {src: '/img/item05.jpg', srcset: '/img/item05@2x.jpg 2x'},sum: 900000,description: 'Куплю монстеру зеленую в хорошем зеленом состоянии, буду поливать...'},{title: 'Кофеварка',categories: ['Электроника'],type: 'Продам',photo: {src: '/img/item04.jpg', srcset: '/img/item04@2x.jpg 2x'},sum: 88000,description: 'Куплю вот такую итальянскую кофеварку, можно любой фирмы...'}]
  main.page-content
    if (categories.length)
      section.categories-list
        h1.visually-hidden Сервис объявлений "Куплю - продам"
        ul.categories-list__wrapper
          each category in categories
            include ../components/category
      section.tickets-list
        h2.visually-hidden Самые новые предложения
        .tickets-list__wrapper
          .tickets-list__header
            p.tickets-list__title Самое свежее
          ul
            each ticket in tickets
              include ../components/ticket
      section.tickets-list
        h2.visually-hidden Самые обсуждаемые предложения
        .tickets-list__wrapper
          .tickets-list__header
            p.tickets-list__title Самые обсуждаемые
          ul
            each ticket in tickets
              include ../components/ticket
    else
      .message
        .message__text
          p На сайте еще не опубликовано ни одного объявления.
        a.message__link.btn.btn--big(href='#') Вход и регистрация
